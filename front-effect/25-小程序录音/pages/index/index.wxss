.record {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
}

.record .progress {
  display: inline-block;
  width: 72px;
  height: 72px;
  position: relative;
  padding: 25rpx;
}

.record .progress canvas {
  position: absolute;
  top: 25rpx;
  left: 25rpx;
  width: 72px;
  height: 72px;
  z-index: 10;
}

.record .record-btn {
  width: 72px;
  height: 72px;
  border-radius: 72px;
}